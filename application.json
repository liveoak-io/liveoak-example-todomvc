{
  html-app: '/app/index.html',
  resources: {
    app: {
      type: 'filesystem',
      config: {
        directory: '${application.dir}/app'
      }
    },

    client: {
      type: 'aggregating-filesystem',
      config: {
        directory: "${io.liveoak.js.dir}"
      }
    },

    css: {
      type: 'aggregating-filesystem',
      config: {
        directory: "${io.liveoak.css.dir}"
      }
    },

    auth: {
      type: 'keycloak'
    },

    authz: {
      type: 'security'
    },

    aclPolicy: {
      type: 'aclPolicy'
    },

    drools-policy: {
      type: 'drools-policy',
      config: {
        "rules": [
          {
            "priority": 2,
            "uriPattern": "*",
            "requestType": "*",
            "allowedRoles": "'todomvc/admin'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc",
            "requestType": "READ",
            "allowedUsers": "'*'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc/app*",
            "requestType": "READ",
            "allowedUsers": "'*'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc/client/(.*)[.]js",
            "requestType": "READ",
            "allowedUsers": "'*'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "READ",
            "conditions": "parseJson($q).get('user') == $securityContext.subject",
            "allowedRoles": "'todomvc/user'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "READ",
            "conditions": "$responseState.getProperty('user') ==  $securityContext.subject",
            "allowedRoles": "'todomvc/user'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "CREATE",
            "conditions": "$requestState.getProperty('user') ==  $securityContext.subject",
            "allowedRoles": "'todomvc/user'"
          },
          {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "UPDATE",
            "conditions": "$requestState.getProperty('user') !=  $securityContext.subject",
            "deniedUsers": "'*'"
          }
        ]
      }
    },

    storage: {
      type: 'mongo',
      config: {
        db: 'liveoak',
        servers: [
          {
            host: 'localhost',
            port: 27017
          }
        ]
      }
    }

  }
}
