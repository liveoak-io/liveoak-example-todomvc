{
    "id": "todomvc",
    "realm": "todomvc",
    "enabled": true,
    "tokenLifespan": 3600,
    "accessCodeLifespan": 10,
    "accessCodeLifespanUserAction": 6000,
    "sslNotRequired": true,
    "registrationAllowed": true,
    "resetPasswordAllowed": true,
    "requiredCredentials": [ "password" ],

    "users" : [
        {
            "username" : "bob",
            "enabled": true,
            "credentials" : [
                { "type" : "password",
                  "value" : "password" }
            ]
        },
        {
            "username" : "john",
            "enabled": true,
            "credentials" : [
                { "type" : "password",
                  "value" : "password" }
            ]
        },
        {
            "username" : "mary",
            "enabled": true,
            "credentials" : [
                { "type" : "password",
                  "value" : "password" }
            ]
        }
    ],

    "roles": {
        "application" : {
            "test-app" : [
                {
                    "name": "user",
                    "description": "Have Test-app User privileges"
                },
                {
                    "name": "admin",
                    "description": "Have Test-app Admin privileges"
                }
            ]
        }
    },

    "applications": [
        {
            "name": "test-app",
            "enabled": true,
            "webOrigins": [ "http://localhost:8080" ],
            "redirectUris": [ "http://localhost:8080/todomvc" ],
            "credentials": [
                {
                    "type": "secret",
                    "value": "password"
                }
            ],
            "defaultRoles": [ "user" ]
        }
    ],

    "applicationRoleMappings": {
        "test-app": [
            {
                "username": "bob",
                "roles": [ "user", "admin" ]
            },
            {
                "username": "john",
                "roles": [ "user" ]
            }
        ],
        "account": [
            {
                "username": "bob",
                "roles": [ "view-profile", "manage-account" ]
            },
            {
                "username": "john",
                "roles": [ "view-profile", "manage-account" ]
            }
        ]
    }
}
